<div class="container">
  <br>
  <h2><%= @article.title %>  <small><%= link_to edit_article_path do %>
        <i class="far fa-edit"></i>
      <% end %>
      <%= link_to article_path(@article), method: :delete,
            data: { confirm: "Are you sure?" } do %>
            <i class="fas fa-trash-alt"></i>
      <% end %></small>
  </h2>
  <br>
  <h3><%= @article.content %></h3>
  <br>


</div>
